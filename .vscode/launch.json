{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug",
            "program": {
                "command": "love"
            },
            "args": [
                "${input:gameDir}",
                "debug"
            ],
            "scriptRoots": [
                "${input:gameDir}"
            ],
        },
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Release",
            "program": {
                "command": "love"
            },
            "args": [
                "${input:gameDir}",
            ],
        },
    ],
    "inputs": [
        {
            "id": "gameDir",
            "type": "command",
            "command": "extension.commandvariable.transform",
            "args": {
                "text": "${relativeFileDirname}",
                "find": "(.*?)\\${pathSeparator}.*",
                "replace": "$1"
            }
        }
    ],
}
